<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="sans-serif"
            android:text="Svgeng Smarthome"
            android:textAlignment="center"
            android:textColor="#29434e"
            android:textSize="25dp" />

        <LinearLayout
            android:id="@+id/subLinear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/subLinear11"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_shape"
                android:gravity=""
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_lamp_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:text="Light 1"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <Switch
                    android:id="@+id/switchLamp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:switchMinWidth="60dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/subLinear12"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_shape"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/text_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="27Â°"
                    android:textColor="#000000"
                    android:layout_gravity=""
                    android:textSize="70dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/subLinear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/subLinear21"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_shape"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_lamp_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:text="Light 2"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <Switch
                    android:id="@+id/switchLamp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:switchMinWidth="60dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/subLinear22"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/round_shape"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_door_foreground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="15dp"
                    android:text="Door"
                    android:textColor="#000"
                    android:textSize="20dp" />

                <Switch
                    android:id="@+id/switchDoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:switchMinWidth="60dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

